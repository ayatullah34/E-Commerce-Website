
@{
    ViewBag.Title = "UrunOzellikEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head{
    <script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>

    <script>
        $(document).ready(function myfunction() {
            $("#urun").change(function myfunction() {
                //var id = $(this).val();
                //var sonuc = id.split('-')[1];
                var sonuc = $(this).find("option:selected").attr("title");
               

                $.ajax({
                    type: "GET",
                    url: "/Ozellik/UrunOzellikTipWidget",
                    data: { katId: sonuc },
                    success: function myfunction(veri) {
                        $("#tip").html('');
                        $("#tip").append(veri);
                    },
                });
            });

            $("#tip .form-group .col-lg-10 .m-bot15").change(function myfunction() {
                var id = $(this).val();
            });

        });
    </script>
    
}


@model IEnumerable<E_Ticaret.Models.Urun>

<br />
<br />
<br />

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Özellik Ekle
            </header>
            <div class="panel-body">
                <form role="form" action="/Ozellik/UrunOzellikEkle" method="post" class="form-horizontal tasi-form">

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Ürün:</label>

                        <div class="col-lg-10">

                            <select id="urun" class="form-control m-bot15" name="UrunId">
                                @foreach (var urun in Model)
                                {
                                    <option value="@urun.Id" title="@urun.KategoriID">@urun.Adi</option>
                                }

                            </select>

                        </div>

                    </div>
                   
                   <div id="tip">

                   </div>

                    <div id="deger">

                    </div>
                

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>


