
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head{
    <link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
}

@model IEnumerable<E_Ticaret.Models.Marka>

<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    @if (User.IsInRole("A"))
                    {
                        <a href="/Marka/MarkaEkle" class="btn btn-success">
                            Yeni Marka <i class="icon-plus"></i>
                        </a>
                    }
                    else
                    {
                        <a href="#" class="btn btn-success">
                            Yeni Marka ekleme yetkiniz yoktur.
                        </a>
                    }
                </div>

            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <th>Resmi Göster</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marka in Model)
                    {
                    <tr class="">
                        <td>@marka.Adi</td>
                        <td>@marka.Aciklama</td>

                        <td>
                            @if (marka.Resim != null)
                            {
                                <a class="fancybox" rel="group" href="@marka.Resim.OrtaYol">
                                    <i class="icon-eye-open"></i>

                                </a>
                            }

                        </td>

                        @if (User.IsInRole("A"))
                        {
                            <td>
                                <a class="edit" href="/Marka/MarkaGuncelle/@marka.Id">
                                    <i class="icon-pencil"></i>

                                </a>
                            </td>

                            <td>
                                <a class="delete" href="/Marka/MarkaSil/@marka.Id">
                                    <i class="icon-trash"></i>

                                </a>
                            </td>

                        }
                else { 
                        <td>
                            <a class="edit" href="#">
                                Güncelleme yetkiniz yoktur.

                            </a>
                        </td>

                        <td>
                            <a class="delete" href="#">
                               Silme yetkiniz yoktur.

                            </a>
                        </td>
                        }

                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section>


<script src="/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>

<script type="text/javascript">
    $(function () {
        //    fancybox
        jQuery(".fancybox").fancybox();
    });

</script>
