
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model E_Ticaret.Models.Kategori
<br />
<br />
<br />

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Ekle
            </header>
            <div class="panel-body">
                <form action="/Kategori/KategoriEkle" class="form-horizontal tasi-form" method="post">
                    <div class="form-group">
                        <input type="hidden" name="Id" class="form-control" value="@Model.Id">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori Adı:</label>


                        <div class="col-sm-10">
                            @if (Model != null)
                            {
                                <input type="text" name="Adi" class="form-control" value="@Model.Adi">
                            }
                            else
                            {
                                <input type="text" name="Adi" class="form-control" value="Kategori adını giriniz">
                            }

                        </div>




                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                
                        <div class="col-sm-10">
                            @if (Model != null)
                            {
                                <input name="Aciklama" type="text" value="@Model.Aciklama" class="form-control">
                            }
                            else
                            {
                                <input name="Aciklama" type="text" value="Açıklama giriniz" class="form-control">
                            }


                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>


    </div>
</div>


