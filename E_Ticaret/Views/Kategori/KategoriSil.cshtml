
@{
    ViewBag.Title = "KategoriSil";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using E_Ticaret.Models
@model Kategori

<br />
<br />
<br />
<br />



<div class="row">
    <div class="col-lg-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kategori Silme Sayfası
                </div>
                <div class="block-controls">
                    <br />
                    <a href="/Kategori/Kategoriler">Geri Dön</a>

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>

                    <br /><br />
                    <a href="/Kategori/KategoriEkle" class="btn btn-success rounded">Yeni Kategori Ekle</a>
                </div>
            </div>
            <br />
            <br />
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kategori/KategoriSil/" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <label>@Model.Adi isimli kategori silinsin mi?</label>
                        <input type="submit" class="btn btn-danger" name="name" value="Evet" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

