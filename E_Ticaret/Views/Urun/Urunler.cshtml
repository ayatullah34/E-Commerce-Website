
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<E_Ticaret.Models.Urun>

<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    @if (User.IsInRole("A") || User.IsInRole("T"))
                    {
                        <a href="/Urun/UrunEkle" class="btn btn-success">
                            Yeni Ürün <i class="icon-plus"></i>
                        </a>
                    }
                    else
                    {
                        <a href="#" class="btn btn-success">
                            Yeni Ürün ekleme yetkiniz yoktur.
                        </a>
                    }
                </div>

            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Alış Fiyat</th>
                        <th>Satış Fiyat</th>
                        <th>Kategori</th>
                        <th>Eklenme Tarihi</th>
                        <th>Marka</th>
                        <th>Son Kullanma Tarihi</th>
                        <th>Resim Ekle</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var urun in Model)
                    {
                        <tr class="">
                            <td>@urun.Adi</td>
                            <td>@urun.Aciklama</td>
                            <td>@urun.AlisFiyat</td>
                            <td class="center">@urun.SatisFiyat</td>
                            <td class="center">@urun.Kategori.Adi</td>
                            <td class="center">@urun.EklenmeTarihi</td>

                            @if (urun.Marka != null)
                            {
                                <td class="center">@urun.Marka.Adi</td>
                            }


                            <td class="center">@urun.SonKullanmaTarihi</td>

                            @if (User.IsInRole("A") || User.IsInRole("T"))
                            {
                                <td>
                                    <a class="fancybox" href="/Urun/UrunResimEkle/@urun.Id">
                                        <i class="icon-plus"></i>

                                    </a>
                                </td>

                                <td>
                                    <a class="edit" href="/Urun/UrunGuncelle/@urun.Id">
                                        <i class="icon-pencil"></i>

                                    </a>
                                </td>
                                <td>
                                    <a class="delete" href="/Urun/UrunSil/@urun.Id">
                                        <i class="icon-trash"></i>

                                    </a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a class="fancybox" href="#">
                                        Resim ekleme yetkiniz yoktur.

                                    </a>
                                </td>

                                <td>
                                    <a class="edit" href="#">
                                        Ürün güncelleme yetkiniz yoktur.

                                    </a>
                                </td>
                                <td>
                                    <a class="delete" href="#">
                                        Ürün silme yetkiniz yoktur.
                                    </a>
                                </td>
                            }



                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section>

